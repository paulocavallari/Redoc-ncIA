{
  "entities": {
    "User": {
      "title": "User",
      "description": "Represents a user in the system.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The user's full name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "username": {
          "type": "string",
          "description": "The user's unique username."
        },
        "passwordHash": {
          "type": "string",
          "description": "The hashed password for the user."
        }
      },
      "required": ["name", "email", "username", "passwordHash"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/User"
      },
      "description": "Stores user profile information."
    },
    "/savedPlans/{planId}": {
        "schema": {
            "type": "object",
            "properties": {}
        },
        "description": "Stores saved lesson plans for users."
    },
    "/escopo-sequencia/{escopoId}": {
        "schema": {
            "type": "object",
            "properties": {}
        },
        "description": "Stores the Escopo-SequÃªncia data."
    }
  }
}
