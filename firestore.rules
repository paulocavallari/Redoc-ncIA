rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can be created by anyone (for registration), but only the user themselves can read or update their own data.
    // Listing all users is not allowed for clients.
    match /users/{userId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Admins can manage the escopo-sequencia data. Authenticated users can read it.
    match /escopo-sequencia/{docId} {
      function isAdmin() {
        return request.auth != null && request.auth.token.username == 'admin';
      }
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Users can manage their own saved plans.
    match /savedPlans/{planId} {
      allow read, write, delete: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
  }
}
